{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- Header ./partials/site-header.hbs --}}
{{> "site-header"}}

{{#post}}

<div class="post w-full max-w-screen-xl mx-auto px-6">
    <div class="flex -mx-6 py-6">

        <div class="w-full lg:w-3/4 xl:w-3/5 mx-auto">
            <article class="post-article p-6 lg:px-12 lg:py-10">
                {{!-- Header --}}
                <header class="post-header markdown">
                    <h1 class="post-title text-gray-800 md:text-4xl">{{title}}</h1>

                    {{!-- Date Time - Authors - Read Time ./partials/helper/time-author-read --}}
                    {{> "helper/time-author-read"}}
                </header>

                {{#if feature_image}}
                <figure class="post-image mt-8">
                    <img
                        srcset="{{img_url feature_image size="s"}} 300w,
                                {{img_url feature_image size="m"}} 600w,
                                {{img_url feature_image size="l"}} 1000w,
                                {{img_url feature_image size="xl"}} 2000w"
                        sizes="(max-width: 800px) 400px,
                            (max-width: 1170px) 1170px,
                                2000px"
                        src="{{img_url feature_image size="xl"}}"
                        alt="{{title}}"
                        class="kusi-doc-zoom"
                    />
                </figure>
                {{/if}}

                {{!-- Content --}}
                <section class="markdown js-markdown">
                    {{content}}

                    {{!-- Tags --}}
                    {{#if tags}}<div class="post-tags mt-6"><span class="text-gray-800">{{t "Tags:"}}</span> {{tags}}</div>{{/if}}
                </section>


                {{!-- Subscribe Form ./partials/helper/subscribe-form --}}
                {{#if @labs.members}}
                    {{> "helper/subscribe-form"}}
                {{/if}}
            </article>

            {{!-- Post Footer --}}
            <div class="post-footer px-6 lg:px-12">
                <div class="grid grid-cols-12 border-t border-gray-300">
                    {{!-- Next Post ./partials/post-next-prev-card.hbs --}}
                    {{#next_post}}
                        {{> "post-next-prev-card" class="pr-10 pl-0" svgClass="mr-4" storyTitle=(t "Previous Post")}}
                        {{else}}
                        <div class="col-span-6"></div>
                    {{/next_post}}

                    {{!-- Previous Post ./partials/post-next-prev-card.hbs --}}
                    {{#prev_post}}
                        {{> "post-next-prev-card" class="pl-10 pr-0 justify-end text-right" svgClass="order-2 transform rotate-180 ml-4" storyTitle=(t "Next Post")}}
                        {{else}}
                        <div class="col-span-6"></div>
                    {{/prev_post}}
                </div>
            </div>
        </div>
    </div>
</div>

{{/post}}

{{!-- Footer ./partials/site-footer.hbs --}}
{{> "site-footer"}}